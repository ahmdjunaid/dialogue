<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/user/reset.css">
</head>

<body>
    <div class="form-container">
        <div class="logo-container">
            <!-- Replace this with your actual logo -->
            <div><img src="/images/DialogueLogo.png" style="width: 15em;" alt=""></div>
        </div>

        <h1>Reset Your Password</h1>
        <form method="post" onsubmit="return validatePassword()" action="/resetpass">
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="password">
                <p class="password-requirements">
                    Password must be at least 8 characters long and include at least one uppercase letter, one lowercase letter, one number, and one special character.
                </p>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword">
            </div>

            <button type="submit">Reset Password</button>
        </form>
    </div>

    <script>


        // Simple password validation
        function validatePassword() {

            const password = document.getElementById('newPassword').value;
            const confirm = document.getElementById('confirmPassword').value;

            let passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_])[A-Za-z\d\W_]{8,}$/;

            console.log(password);
            

            if (!passwordRegex.test(password)) {
                swal.fire("Password must be at least 8 characters long and include at least one uppercase letter, one lowercase letter, one number, and one special character.")
                return false;
            }

            if(password!==confirm){
                swal.fire("Password does not match")
                return false;
            }

            return true;
        }

    </script>
</body>

</html>