<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Dialogue</title>
    <link rel="stylesheet" href="/css/user/login.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <div class="container">
        <div class="login-form">
            <div class="logo">
                <img src="/images/DialogueLogo.png" class="dial-logo" alt="">
            </div>
            <h1>Login</h1>
            <form action="/login" onsubmit="return validateForm()" method="post">
                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email">
                </div>
                <div class="input-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password">
                </div>
                <button type="submit" class="login-button">Login</button>
                <a type="button" class="google-button" href="/auth/google">
                    <svg width="20" height="20" viewBox="0 0 24 24">
                        <path
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                            fill="#4285F4" />
                        <path
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                            fill="#34A853" />
                        <path
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                            fill="#FBBC05" />
                        <path
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                            fill="#EA4335" />
                    </svg>
                    Sign in with Google
                </a>
            </form>
            <div class="links">
                <a href="/signup">Don't have an account? Sign up</a>
                <a href="/forgot">Forgot Password?</a>
            </div>
        </div>
        <div class="image-section">
            <img src="/images/loginbanner.png" alt="App Preview" class="img-fluid object-fit-cover">
        </div>
    </div>
    <input type="hidden" id="message" value="<%= message %>">
</body>
<script>
    const message = document.getElementById('message').value;
    if (message) {
        swal.fire(message)
    }


    function validateForm() {
        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value.trim()

        if (!email || !password) {
            swal.fire({
                icon: 'error',
                title: 'All fields are required',
                timer: 1500,
                showConfirmButton: false
            })
            return false
        }
        return true
    }







</script>

</html>