<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <div class="main-container">
        <!-- Sidebar Placeholder -->
        <div class="sidebar">
            <!-- Your sidebar content goes here -->
            <%-include("../../views/partials/admin/aside")%>
        </div>
        <div class="wallet-main-container">
            <!-- User Info Section -->
            <div class="wallet-card">
                <h2 class="wallet-heading text-dark">Wallet Information</h2>
                <div class="wallet-user-grid">
                    <div class="wallet-user-info">
                        <p><strong>Name:</strong>
                            <%= userId.username %>
                        </p>
                        <p><strong>Email:</strong>
                            <%= userId.email %>
                        </p>
                        <p><strong>Account Created:</strong>
                            <%= new Date(userId.createdOn).toLocaleDateString() %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Wallet Balance Section -->
            <div class="wallet-card">
                <h2 class="wallet-heading text-dark">Wallet Balance</h2>
                <p class="wallet-balance-text">
                    Balance: ₹<%= balance.toLocaleString() %>
                </p>
            </div>

            <!-- Transactions Section -->
            <div class="wallet-card">
                <h2 class="wallet-heading">Transaction History</h2>
                <% if (transactions.length> 0) { %>
                    <div class="wallet-table-container">
                        <table class="wallet-table">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="wallet-align-center">Type</th>
                                    <th class="wallet-align-center">Amount</th>
                                    <th class="wallet-align-center">View Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach(transaction=> { %>
                                    <tr>
                                        <td>
                                            <%= transaction.description %>
                                        </td>
                                        <td class="wallet-align-center">
                                            <span class="wallet-transaction-type <%= transaction.type %>">
                                                <%= transaction.type.charAt(0).toUpperCase() + transaction.type.slice(1)
                                                    %>
                                            </span>
                                        </td>
                                        <td class="wallet-align-center">
                                            ₹<%= transaction.amount.toLocaleString() %>
                                        </td>
                                        <td class="wallet-align-center">
                                            <%if(transaction.orderId){%>
                                                <button style="border: none; background: none;"
                                                    onclick="orderDetails('<%= transaction.orderId %>')"><i
                                                        class="fas fa-eye action-btn" title="View Details"></i></button>
                                                <%}else{%>
                                                    <button style="border: none; background: none;" disabled><i
                                                            class="fas fa-eye action-btn"
                                                            title="View Details"></i></button>
                                                    <%}%>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- Pagination -->
                    <% if (totalPages> 1) { %>
                        <div class="wallet-pagination">
                            <% for (let i=1; i <=totalPages; i++) { %>
                                <% if (i===currentPage) { %>
                                    <a class="wallet-active">
                                        <%= i %>
                                    </a>
                                    <% } else { %>
                                        <a href="/admin/userwallet?id=<%= userId._id %>&page=<%= i %>">
                                            <%= i %>
                                        </a>
                                        <% } %>
                                            <% } %>
                        </div>
                        <% } %>
                            <% } else { %>
                                <p class="wallet-no-transactions">No transactions found.</p>
                                <% } %>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-labelledby="orderDetailsModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="orderIdTitle">Order Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="orderDetailsContent">
                    <!-- Order details will be injected here -->
                </div>
            </div>
        </div>
    </div>

    <script>
        function orderDetails(orderId) {
            fetch(`/admin/findOrder?id=${orderId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const order = data.order;

                        // Set modal title
                        document.getElementById('orderIdTitle').innerText = `Order ID: ${order.orderId}`;

                        // Build the modal content
                        const content = `
                    <h6><strong>Status:</strong> ${order.status}</h6>
                    <h6><strong>Cancellation Reason:</strong> ${order.cancellationReason || 'N/A'}</h6>
                    <hr>

                    <h6><strong>Shipping Address:</strong></h6>
                    <p>
                        ${order.shippingaddress.name}<br>
                        ${order.shippingaddress.addressType}, ${order.shippingaddress.city}, ${order.shippingaddress.state} - ${order.shippingaddress.pincode}<br>
                        Mobile: ${order.shippingaddress.mobile}
                    </p>
                    <hr>

                    <h6><strong>Ordered Items:</strong></h6>
                    <ul class="list-group">
                        ${order.orderedItems.map(item => `
                            <li class="list-group-item">
                                Product Name: ${item.product.productName}<br>
                                Quantity: ${item.quantity}<br>
                                Price: ₹${item.price}<br>
                                Offer Discount: ₹${item.offerAmount}<br>
                                Status : ${item.status}
                            </li>`).join('')}
                    </ul>
                    <hr>

                    <h6><strong>Payment Method:</strong> ${order.paymentMethod}</h6>
                    <h6><strong>Total Price:</strong> ₹${order.totalPrice}</h6>
                    <h6><strong>Discount:</strong> ₹${order.discount}</h6>
                    <h6><strong>Final Amount:</strong> ₹${order.finalAmount}</h6>
                    <h6><strong>Returned Amount:</strong> ₹${order.cancelOrReturn}</h6>
                    <h6><strong>Coupon Applied:</strong> ${order.couponApplied || 'None'}</h6>
                `;

                        // Inject into modal
                        document.getElementById('orderDetailsContent').innerHTML = content;

                        // Show modal
                        const orderModal = new bootstrap.Modal(document.getElementById('orderDetailsModal'));
                        orderModal.show();
                    }
                })
                .catch(err => console.error('Error fetching order:', err));
        }
    </script>
</body>

</html>