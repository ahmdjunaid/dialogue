<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dialogue Digital - Orders</title>
    <link rel="stylesheet" href="/css/admin/brands.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%-include("../../views/partials/admin/aside")%>

        <!-- Main content area -->
        <div class="main-content">
            <!-- Header with search -->
            <div class="header">
                <div class="search-container">
                    <form action="/admin/orders" method="GET">
                        <input class="search-input" type="text" name="search" id="searchInput"
                            placeholder="Search for Orders">
                        <button type="submit" id="searchBtn" class="btn btn-success">Search</button>
                        <button type="button" class="btn btn-secondary" onclick="clearSearch()">Clear</button>
                    </form>
                </div>
                <div class="user-avatar"></div>
            </div>

            <!-- Categories section -->
            <div class="categories-container">

                <div class="categories-header">
                    <div class="categories-title">Orders</div>
                </div>

                <table class="categories-table">
                    <thead>
                        <tr>
                            <th>IMAGE</th>
                            <th>ORDER ID</th>
                            <th>CUSTOMER NAME</th>
                            <th>ORDER DATE</th>
                            <th>TOTAL AMOUNT</th>
                            <th>STATUS</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="justify-content-center">
                        <% orders.forEach(item=>{%>
                            <tr>
                                <td>
                                    <%item.orderedItems.forEach(product=>{%>
                                        <img src="../uploads/<%= product.product.productImage[0] %>" 
                                        alt="<%= product.product.productName %>" width="25px">
                                        <%})%>
                                </td>
                                <td>
                                    <%= item.orderId %>
                                </td>
                                <td>
                                    <%= item.userId.username %>
                                </td>
                                <td>
                                    <%= item.createdOn.toLocaleDateString('en-US', { year: 'numeric' ,
                                    month: 'short' , day: 'numeric' }) %>
                                </td>
                                <td>
                                    <%= item.finalAmount %>
                                </td>
                                <td>
                                    <%= item.status %>
                                </td>
                                <td>
                                    <a href="/admin/vieworder?orderId=<%= item.orderId %>"><button class="btn btn-success">View</button></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <div class="pagination">
                    <div class="page-numbers">
                        <div class="page-nav"></div>
                        <% for (let j=1; j <=totalPages; j++) { %>
                            <a href="?page=<%= j %>" style="text-decoration: none;">
                                <button class="page-button <%= (j === currentPage) ? 'active' : '' %>">
                                    <%= j %>
                                </button>
                            </a>
                            <% } %>
                                <div class="page-nav"></div>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="message" value="<%= message %>">

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

        <script>
            let message = document.getElementById('message').value;
            if (message) {
                swal.fire(message)
            }

            function clearSearch() {
                document.getElementById("searchInput").value = "";
                document.getElementById('searchBtn').click();

            }
        </script>